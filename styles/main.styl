
accent-color = #8ef3af
bg-color = #a8a8a8
txt-color = #dde7e7

@import url(http://fonts.googleapis.com/css?family=Raleway:200);

body
  font-family 'Raleway', sans-serif
  color txt-color
  background-color bg-color

::selection
  background-color accent-color
  color darken(bg-color, 30)

main
  width 50vw
  height 50vw
  position absolute
  left 50vw
  top 50vh
  margin-top -25vw
  margin-left -25vw

.container
  width 100%
  height 100%

#content
  margin-top -100%
  > h1
    position relative
    top 8.5vw
    left 8.5vw
    opacity 0
  .opaque
    transition opacity 0.5s ease-in
    opacity 1

